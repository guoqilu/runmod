#%Module1.0# # -*- tcl -*-

module-whatis	"Loads flexnoc paths"


module load toolbase



set	flexnoc_version 4.7.0
setenv FLEXNOC_HOME $env(TOOLBASE)/arteris/FlexNoC-$flexnoc_version

prepend-path    PATH	$env(FLEXNOC_HOME)/bin

unsetenv PYTHONSTARTUP
setenv FLEXNOC_SHARE    $env(FLEXNOC_HOME)/share
setenv FLEXNOC_IMPORTLVL PKG
setenv GCC_HOME 	$env(FLEXNOC_HOME)/externals
setenv SYSTEMC_HOME 	$env(FLEXNOC_HOME)/share/sw/exported
setenv TLM_INCLUDE 	$env(FLEXNOC_HOME)/share/sw/exported/include
setenv LPSOLVE_LIB 	$env(FLEXNOC_HOME)/share/sw/exported/lib
setenv QTWEBKIT_LIB 	$env(FLEXNOC_HOME)/share/sw/exported/lib
setenv GMP_LIB 		$env(FLEXNOC_HOME)/share/sw/exported/lib
setenv GMP_INCLUDE 	$env(FLEXNOC_HOME)/share/sw/exported/include
setenv PYTHONHOME       $env(FLEXNOC_HOME)/externals
setenv PYTHONPATH       $env(FLEXNOC_SHARE)/sw/exported/lib/python2.7/site-packages:$env(FLEXNOC_SHARE)/tools/exported/lib/python2.7/site-packages:$env(PYTHONHOME)/lib/python2.7/site-packages
setenv PYTHONVERSION    2.7
setenv QTDIR            $env(FLEXNOC_HOME)/externals
setenv LANG             en_US.UTF-8
setenv FLEXNOC_LD_LIBRARY_PATH $env(FLEXNOC_SHARE)/sw/exported/lib:$env(FLEXNOC_SHARE)/tools/exported/lib
setenv FLEXNOC_PATH     $env(FLEXNOC_HOME)/bin
setenv FLEXNOC_EXTERNAL_LD_LIBRARY_PATH $env(GCC_HOME)/lib64:$env(GMP_LIB):$env(FLEXNOC_HOME)/externals/lib
setenv FLEXNOC_EXTERNAL_PATH   $env(FLEXNOC_HOME)/externals/bin
setenv FLEXNOC_EXTERNAL $env(FLEXNOC_HOME)/externals
setenv FLEXNOC_GCC      $env(GCC_HOME)/bin/gcc
setenv FLEXNOC_CPP      $env(GCC_HOME)/bin/g++
setenv FLEXNOC_LDFLAGS  "-L$env(GCC_HOME)/lib64 -L$env(SYSTEMC_HOME)/lib64-linux -L$env(SYSTEMC_HOME)/lib-linux64 -L$env(GMP_LIB) -L$env(FLEXNOC_SHARE)/sw/exported/lib -L$env(FLEXNOC_SHARE)/tools/exported/lib -L$env(FLEXNOC_HOME)/externals/lib"
setenv FLEXNOC_CFLAGS   "-fpermissive -I$env(GCC_HOME)/include -I$env(SYSTEMC_HOME)/include -I$env(GMP_INCLUDE) -I$env(TLM_INCLUDE) -I$env(FLEXNOC_SHARE)/sw/exported/include -I$env(FLEXNOC_SHARE)/tools/exported/include -I$env(FLEXNOC_HOME)/externals/include"
setenv FLEXNOC_RPATH    "-Wl,-rpath $env(GMP_LIB) -Wl,-rpath $env(FLEXNOC_SHARE)/sw/exported/lib -Wl,-rpath $env(FLEXNOC_SHARE)/tools/exported/lib -Wl,-rpath $env(FLEXNOC_HOME)/externals/lib"
