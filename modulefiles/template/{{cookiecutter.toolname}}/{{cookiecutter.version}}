#%Module1.0# # -*- tcl -*-

module-whatis	"Loads {{ cookiecutter.toolname|lower }} paths"

{% if cookiecutter.requires_cadence|lower == "true" %}
module load cadence
{% set root="$env(CADENCE_DIR)" %}
{% else %}
{% set root="/tools" %}
{% endif %}

set	{{ cookiecutter.toolname|lower }}_version {{ cookiecutter.version }}

prepend-path    PATH	{{ root }}/{{ cookiecutter.toolname|upper }}${{ cookiecutter.toolname|lower }}_version/tools.lnx86/bin/64bit
prepend-path    PATH	{{ root }}/{{ cookiecutter.toolname|upper }}${{ cookiecutter.toolname|lower }}_version/tools.lnx86/bin
